generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}


model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  posts     Post[]
  createdAt DateTime @default(now())

  @@map("tags")
}

model Post {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  excerpt     String?
  content     String
  status      PostStatus @default(DRAFT)
  publishedAt DateTime?
  authorId    String?
  category    Category?  @relation(fields: [categoryId], references: [id])
  categoryId  String?
  tags        Tag[]
  comments    Comment[]
  postViews   PostView[]
  views       Int        @default(0)
  readingTime Int?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deletedAt   DateTime?

  @@index([status])
  @@index([publishedAt])
  @@map("posts")
}

model PostView {
  id        String   @id @default(cuid())
  postId    String
  userId    String?
  ip        String?
  createdAt DateTime @default(now())

  post Post @relation(fields: [postId], references: [id])

  @@index([postId])
  @@index([userId])
  @@index([ip])
  @@unique([postId, userId, ip])
}


model Comment {
  id        String    @id @default(cuid())
  text      String
  post      Post      @relation(fields: [postId], references: [id])
  postId    String
  authorId  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  isPublic  Boolean   @default(true)

  @@index([postId])
  @@index([authorId])
  @@map("comments")
}


